[Unit]
Description=Osmocom Home Location Register (OsmoHLR)
Documentation=https://osmocom.org/projects/osmo-hlr/wiki/OsmoHLR

[Service]
Type=simple
Restart=always
ExecStart=/usr/local/bin/osmo-hlr -c /etc/osmoBTS/osmo-hlr.cfg -l /var/lib/osmocom/hlr.db
RestartSec=2

[Install]
WantedBy=multi-user.target
